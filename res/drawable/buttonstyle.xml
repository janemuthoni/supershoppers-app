<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#330099" />
      <stroke
          android:width="1dp"
          android:color="#2f9999" />
      <corners
          android:radius="6dp" />
      <margin
          android:left="300dp"
          android:top="300dp"
          android:right="300dp"
          android:bottom="300dp"/>
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#330099"
          android:endColor="#2f9999"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#2f9999" />
      <corners
          android:radius="6dp" />
       <margin
          android:left="20dp"
          android:top="20dp"
          android:right="20dp"
          android:bottom="20dp"/>
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
    </item>
    </selector>

